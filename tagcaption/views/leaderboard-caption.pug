extends layout.pug

block content
	header(class='post-header')
		h2(class='post-title') #{title}
	div(class='post-description')
		p.
			#{description}
		p.
			Runs highlighted in this <span style='background-color:#ffa500'>color</span> are currently being processed by the backend, while runs highlighted in this <span style='background-color:#ff9999'>color</span> could not be processed. Please refresh the leaderboard from time to time for updates.
	
	div(class='post-description')
		table(class='pure-table pure-table-horizontal pure-table-striped')
			thead
				tr
					th Verified
					th Team
					th Timestamp
					th #{score1}
					th Comment
			tbody
				each run in valid
					tr
						td(class='verified')
							if run.verified == 1
								img(src='images/check.png' width='14' height='14')
						td(class='team') #{run.name}
						td(class='timestamp') #{run.timestamp}
						td(class='score') #{Number(run.score1).toFixed(2)}
						td(class='comment') #{run.comment}
				each run in active
					tr(class='active')
						td(class='verified')
							if run.verified == 1
								img(src='images/check.png' width='14' height='14')
						td(class='team') #{run.name}
						td(class='timestamp') #{run.timestamp}
						td(class='score')
						td(class='comment') #{run.comment}
				each run in invalid
					tr(class='invalid')
						td(class='verified')
							if run.verified == 1
								img(src='images/check.png' width='14' height='14')
						td(class='team') #{run.name}
						td(class='timestamp') #{run.timestamp}
						td(class='score')
						td(class='comment') #{run.comment}