extends layout.pug

block content
	header(class='post-header')
		h2(class='post-title') Add registration
	div(class='post-description')
		p.
			To register, enter your name (or choose a name) and an email address. After clicking the 'add' button you will be sent a token for you to provide every time you submit a new run to the leaderboard.

		form(action='add', name='register', method='post', class='pure-form pure-form-stacked')
			fieldset
				div(class='pure-control-group')
					label(for='name') Name
					input(type='text', id='name', name='name', required, pattern='^[A-Za-z0-9-_]{1,24}$', placeholder='Enter 1-24 alphanumeric characters', size='45')
				div(class='pure-control-group')
					label(for='email') Email
					input(type='email', id='email', name='email', required, placeholder='Enter your email address', size='45')
				div(class='pure-control-group')
					| &nbsp;
				div(class='pure-control-group')
					input(type='submit', value='Add', class='pure-button pure-button-primary')
					